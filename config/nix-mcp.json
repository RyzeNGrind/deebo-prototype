{
  "description": "Nix-native MCP server configuration for deebo-prototype",
  "mcpServers": {
    "deebo-nix": {
      "command": "nix",
      "args": [
        "run",
        "github:RyzeNGrind/deebo-prototype#deebo-prototype",
        "--",
        "--nix-native"
      ],
      "env": {
        "NODE_ENV": "production",
        "DEEBO_NIX_SANDBOX_ENABLED": "1",
        "NIX_CONFIG": "sandbox = true"
      },
      "transportType": "stdio",
      "disabled": false,
      "autoApprove": [],
      "timeout": 60
    },
    "deebo-compatibility": {
      "command": "node",
      "args": [
        "--experimental-specifier-resolution=node",
        "--experimental-modules",
        "--max-old-space-size=4096",
        "/path/to/deebo-prototype/build/index.js"
      ],
      "env": {
        "NODE_ENV": "production",
        "DEEBO_NIX_SANDBOX_ENABLED": "0"
      },
      "transportType": "stdio",
      "disabled": true,
      "autoApprove": [],
      "timeout": 30
    }
  },
  "nixSandboxConfig": {
    "defaultLanguage": "bash",
    "defaultTimeout": 30000,
    "allowedSystemFeatures": ["sandbox"],
    "strictSandbox": true,
    "allowNetworkAccess": false,
    "maxExecutionTime": 300,
    "enableCaching": true,
    "sandboxOptions": {
      "__noChroot": false,
      "allowSubstitutes": false,
      "requiredSystemFeatures": ["sandbox"]
    }
  },
  "flakeTemplates": {
    "python": "templates/debug-session/python.nix",
    "nodejs": "templates/debug-session/nodejs.nix", 
    "rust": "templates/debug-session/rust.nix",
    "go": "templates/debug-session/go.nix",
    "mixed": "templates/debug-session/mixed.nix"
  },
  "supportedLanguages": [
    "bash",
    "python", 
    "nodejs",
    "typescript",
    "rust",
    "go"
  ],
  "nixFeatures": {
    "sandboxExecution": true,
    "flakeTemplates": true,
    "reproducibleBuilds": true,
    "declarativeEnvironments": true,
    "isolatedWorkspaces": true
  }
}